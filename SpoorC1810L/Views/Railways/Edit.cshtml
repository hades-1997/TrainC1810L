@model TrainC1810L.Models.Railway

@{
    ViewData["Title"] = "Edit";
    Layout = "_SiderBar";
}


<h4>Railway</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RailwayName" class="control-label"></label>
                <input asp-for="RailwayName" class="form-control" />
                <span asp-validation-for="RailwayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

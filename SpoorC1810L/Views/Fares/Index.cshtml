@model IEnumerable<SpoorC1810L.Models.Fare>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiderBar.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfCompartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfTrain)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfCompartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfTrain)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

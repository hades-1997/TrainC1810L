@model IEnumerable<TrainC1810L.Models.TrainRoute>

@{
    Layout = "~/Views/Shared/_SiderBar.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-ml-12">
        <div class="row">
            <!-- Textual inputs start -->
            <div class="col-3">
                <div class="form-group" style="margin-left: 0px;">
                    <label class="col-form-label">Select</label>
                    <select class="form-control" style=" height: calc(2.25rem + 10px);">
                        <option>Select</option>
                        <option>Large select</option>
                        <option>Small select</option>
                    </select>
                </div>
            </div>
            <div class="col-3">
                <div class="form-group" style="margin-left: 0px;">
                    <label class="col-form-label">Select</label>
                    <select class="form-control" style=" height: calc(2.25rem + 10px);">
                        <option>Select</option>
                        <option>Large select</option>
                        <option>Small select</option>
                    </select>
                </div>
            </div>
            <div class="col-3">
                <div class="form-group" style="margin-left: 0px;">
                    <label for="example-date-input" class="col-form-label">Date</label>
                    <input class="form-control" type="date" value="2018-03-05" id="example-date-input">
                </div>
            </div>
            <div class="col-3">
                <div class="form-group" style="margin-left: 0px;margin-top: 35px;">
                    <button class="btn btn-primary" type="submit">Search Train</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-area">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mt-5">
                <div class="card card-bordered">
                    <div class="card-body">
                        <h5 class="title title-train" >@Html.DisplayFor(modelItem => item.train.Field)</h5>
                        <p class="card-text">
                            @Html.DisplayFor(modelItem => item.train.DepartureTime)
                        </p>
                        <a asp-action="Booking" asp-route-id="@item.TrainId" class="btn btn-primary">Booking Train</a>
                    </div>
                </div>
            </div>
        }
        </div>
</div>


